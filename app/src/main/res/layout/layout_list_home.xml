<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shape_corner">

    <ImageView
        android:background="@drawable/ic_get"
        android:id="@+id/listhome_img_atr"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/listhome_tv_title"
        android:text="失物招领标题"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/listhome_tv_name"
        android:text="失物招领发布者"
        android:layout_below="@+id/listhome_tv_title"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/listhome_img_pic"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@+id/listhome_tv_name"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_pic" />

    <TextView
        android:id="@+id/listhome_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listhome_img_pic"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="2024年6月22日 12：25" />

</RelativeLayout>