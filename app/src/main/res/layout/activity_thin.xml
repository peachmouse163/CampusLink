<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".thin.ThinActivity">

    <TextView
        android:id="@+id/thin_img_attribute"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="丢"
        android:textSize="25sp" />

    <LinearLayout

        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/thin_img_TX"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_hello"
            android:contentDescription="头像" />
        <TextView
            android:id="@+id/thin_tv_name"
            android:text="数据—姓名"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/shape_corner"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thin_img_attribute"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thin_tv_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="数据-内容标题" />

        <TextView
            android:id="@+id/thin_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据-内容内容\n内容内容\n内容内容" />

        <TextView
            android:id="@+id/thin_tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="地址:" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/thin_img_pic"
            android:layout_width="256dp"
            android:layout_height="256dp" />

        <TextView
            android:id="@+id/thin_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式:" />

        <TextView
            android:id="@+id/thin_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="时间:" />

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="128dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/stran_btn_toTalk"
                android:text="去联系"
                android:background="@drawable/shape_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <!--<Button
                android:id="@+id/stran_btn_toPay"
                android:text="去支付"
                android:background="@drawable/shape_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>