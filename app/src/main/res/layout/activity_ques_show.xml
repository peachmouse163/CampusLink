<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/loginbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ques.QuesShowActivity">

    <Button
        android:id="@+id/sques_tv_state"
        android:text="状态"
        android:background="@drawable/shape_corner"
        android:layout_marginVertical="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:background="@drawable/shape_corner"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="248dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sques_tv_infoNo"
                android:text="发起者用户号:"
                android:gravity="left"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sques_et_title"
                android:text="问题标题:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sques_tv_content"
                android:text="问题内容:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="right"
                android:id="@+id/sques_tv_time"
                android:text="提出时间："
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:background="@drawable/shape_corner"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="248dp">

        <LinearLayout
            android:id="@+id/sques_linearLayout_reply"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sques_tv_infoNoB"
                android:text="回复部门:"
                android:gravity="left"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sques_tv_contentB"
                android:text="回复内容:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="right"
                android:id="@+id/sques_tv_timeB"
                android:text="回复时间："
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>