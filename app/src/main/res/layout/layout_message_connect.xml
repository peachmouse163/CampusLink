<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/connect_img_pic"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_hello" />

    <TextView
        android:id="@+id/connect_tv_name"
        android:text="这是姓名"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/connect_img_pic"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/connect_tv_message"
        android:text="这是最新一条消息。"
        android:layout_toEndOf="@+id/connect_img_pic"
        android:layout_below="@id/connect_tv_name"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/connect_tv_time"
        android:text="2024年6月6日"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>